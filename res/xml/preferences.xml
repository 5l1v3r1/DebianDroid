<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory 
        android:title="@string/general_settings"
        android:key="general_settings">
    
	    <CheckBoxPreference
	        android:key="use3g"
	        android:title="@string/use_3g"
	        android:summary="@string/use_3g_summary"
	        android:defaultValue="false" />
	    <EditTextPreference
	        android:key="ddusername"
            android:name="Developer username"
            android:summary="Username of Debian developer"
            android:defaultValue="empty"
            android:title="@string/maint_username"
            android:inputType="textAutoComplete" />
	    <EditTextPreference
	        android:key="rinterval"
            android:name="Auto-refresh interval"
            android:summary="Interval (in seconds) between checks for new package/bug data."
            android:defaultValue="600"
            android:title="@string/refresh_interval"
            android:inputType="number" />
    </PreferenceCategory>
    <PreferenceCategory 
        android:title="@string/cache_settings"
        android:key="cache_settings">

	    <EditTextPreference
	        android:key="cachelimit"
            android:name="Cache time limit"
            android:summary="How many hours to keep retrieved info in cache"
            android:defaultValue="48"
            android:title="@string/cache_limit"
            android:inputType="number" />
	    <Preference android:title="Clear cache now"
                android:key="clearcache"
                android:summary="Clear all cached info now"/>
    </PreferenceCategory>
</PreferenceScreen>